
fun sum_list(xs : int list) =
    if null xs
    then 0
    else
	hd xs + sum_list (tl xs);

fun mul_list(xs : int list) =
    if null xs
    then 1
    else
	hd xs * mul_list (tl xs);

fun countdown (x : int) =
    if x = 0
    then []
    else
	x :: countdown(x - 1);

fun append (xs : int list, ys : int list) =
    if null xs
    then ys
    else
	(hd xs) :: append ((tl xs), ys);
    


	

val lst = [1, 2, 3];
val lst2 = [3, 5, 6];



